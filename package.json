{
  "name": "gahdzai-backend",
  "version": "0.1.0",
  "license": "GPL-3.0-or-later",
  "description": "Uses Apollo Server and Prisma to handle the backend for the Gahdzai app",
  "main": "index.js",
  "scripts": {
    "compile": "npm run codegen && tsc",
    "start": "npm run compile && node ./dist/index.js",
    "watch": "nodemon --watch src -e js,ts,graphql -x \"npm run start\"",
    "update": "npx prisma migrate dev && npx prisma generate && npx prisma studio",
    "codegen": "graphql-codegen"
  },
  "keywords": [],
  "author": "Alec Simone",
  "type": "module",
  "dependencies": {
    "@apollo/server": "^4.7.5",
    "@prisma/client": "^5.0.0",
    "bcrypt": "^5.1.0",
    "body-parser": "^1.20.2",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "graphql": "^16.7.1",
    "http": "^0.0.1-security",
    "jsonwebtoken": "^9.0.1"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^5.0.0",
    "@graphql-codegen/typescript": "^4.0.1",
    "@graphql-codegen/typescript-resolvers": "^4.0.1",
    "@types/bcrypt": "^5.0.0",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/node": "^20.4.1",
    "prisma": "^5.0.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.6"
  }
}
